<h1>Tweets</h1>

<%= link_to "New Tweet","tweets/new" %>

<br>
<br>

<table>

	<tr>
		<th>Id</th>
		<th>Title</th>
		<th>Description</th>
		<th>Actions</th>
		<th>Actions</th>
		<th>Actions</th>
	</tr>

	<% @tweets.each do |tweet| %>
		<tr>
			<td><%= tweet.id %></td>
			<td><%= tweet.title %></td>
			<td><%= tweet.description %></td>
			<td><%= link_to "Edit","tweets/#{tweet.id}/edit", method: :get %></td>
			<td><%= link_to "Delete", "tweets/#{tweet.id}", method: :delete %></td>
			<td><%= link_to "Show" ,"tweets/#{tweet.id}", method: :get %><td>
		</tr>
	<% end %>

</table>